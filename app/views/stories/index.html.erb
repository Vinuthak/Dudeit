<h1>List of Stories</h1>

<table border="1" width="500">
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Details</th>
    </tr>

  <tbody>
    <% for story in @stories do %>
      <tr>
          <td><%= story.name %></td>
          <td><%= story.link %></td>
          <td><%= link_to story.name, story_path(story) %></td> 
        <% end %>  
      </tr> 
  </tbody>
</table>